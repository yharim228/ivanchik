<Window x:Class="WpfApp2.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="AuthWindow" Height="645" Width="800">
    <Grid Margin="0,0,0,5">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Margin="83,8,83,9" Grid.Row="1"/>
        <TextBox x:Name="tbxLogin" TextWrapping="Wrap" Text="TextBox" Width="120" Margin="73,52,73,21" Grid.Row="2" Grid.Column="1" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="tbxPass" TextWrapping="Wrap" Text="TextBox" Width="120" Grid.Column="1" Margin="69,31,77,42" Grid.Row="3" RenderTransformOrigin="0.484,1.14" TextChanged="TextBox_TextChanged_1">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="2.06"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.272"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Image Grid.Column="1" Margin="65,104,82,10" Grid.RowSpan="2" Source="/изображение/Безымянный.png" Stretch="Fill"/>
              <Button Content="Button" Margin="15,26,15,26" Grid.Row="4" Grid.Column="1" x:Name="btnOpen" Click="btnOpen_Click"/>
    </Grid>
</Window>
