<Window x:Class="krasn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:krasn"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="470">

    <Grid>
        <Grid Margin="-10,10,10,-10">
            <Grid Margin="10,0,-10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="119*"/>
                    <RowDefinition Height="58*"/>
                    <RowDefinition Height="102*"/>
                    <RowDefinition Height="157*"/>
                    <RowDefinition Height="140*"/>
                    <RowDefinition Height="208*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="141*"/>
                    <ColumnDefinition Width="212*"/>
                    <ColumnDefinition Width="117*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Логин" HorizontalAlignment="Left" Height="82" Grid.Row="1" VerticalAlignment="Top" Width="202" RenderTransformOrigin="0.625,0.669" Grid.ColumnSpan="2" Margin="137,27,0,0" Grid.RowSpan="2"/>
                <CheckBox Grid.Column="1" Content="CheckBox" HorizontalAlignment="Left" Height="51" Margin="0,51,0,0" Grid.Row="2" VerticalAlignment="Top" Width="198" Checked="CheckBox_Checked"/>
                <Label Content="пароль" HorizontalAlignment="Left" Height="120" Grid.Row="3" VerticalAlignment="Center" Width="212" Grid.ColumnSpan="2" Margin="137,0,0,0"/>
                <Button Grid.Column="1" Content="Войти" HorizontalAlignment="Left" Height="94" Margin="15,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="154" Click="Button_Click"/>
                <CheckBox Content="CheckBox" HorizontalAlignment="Left" Height="82" Margin="140,157,0,0" Grid.Row="3" VerticalAlignment="Top" Width="186" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
